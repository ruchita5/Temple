<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.user.templettd.UpdateActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Update Detailes"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/edtname"
                    android:inputType="text"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:drawablePadding="7dp"
                    android:textSize="15sp"
                    android:hint="@string/edtname"
                    android:drawableLeft="@drawable/ic_person_black_24dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtmob"
                    android:inputType="number"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:drawablePadding="7dp"
                    android:textSize="15sp"
                    android:hint="@string/edtmob"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtadd"
                    android:inputType="textPostalAddress"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:drawablePadding="7dp"
                    android:textSize="15sp"
                    android:hint="@string/edtadd"
                    android:drawableLeft="@drawable/ic_place_black_24dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtemail"
                    android:inputType="textEmailAddress"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:drawablePadding="7dp"
                    android:textSize="15sp"
                    android:hint="@string/edtemail"
                    android:drawableLeft="@drawable/ic_mail_black_24dp"/>

                <Button
                    android:id="@+id/btnreg"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btnbg"
                    android:text="Update"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
