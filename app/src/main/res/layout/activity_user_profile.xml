<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.templettd.UserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:id="@+id/up_title"
                android:text="User Details"
                android:textStyle="bold"
                android:textColor="#000"
                android:drawablePadding="7dp"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/up_name"
                android:textStyle="normal"
                android:textColor="#000000"
                android:drawablePadding="7dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_person_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/up_mob"
                android:textStyle="normal"
                android:textColor="#000000"
                android:drawablePadding="7dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/up_add"
                android:textStyle="normal"
                android:textColor="#000000"
                android:drawablePadding="7dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_place_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/up_email"
                android:textStyle="normal"
                android:textColor="#000000"
                android:drawablePadding="7dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_mail_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/up_user"
                android:textStyle="normal"
                android:textColor="#000000"
                android:drawablePadding="7dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/btnup_details"
                android:text="Update"
                android:textStyle="normal"
                android:textColor="#000000"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:background="@drawable/btnbg"/>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
